---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body style="--bgColor:#ECECEC; --textColor:#252422; --colorLogo: #fff; --bgBar: #b4b4b4;">
		<slot />

		<script>
			import "../scripts/hideHeader.js";
			import "../scripts/changeTheme.js";
		</script>
	</body>
</html>

<style is:global>
	:root {
		--darkGray: #252422;
		--gray: #5E5E5E;
		--pink: #F9CDCD;
		--bgWhite: #ECECEC;
		--white: #fff;
		--black: #000;
		--bgCopyright: #191918;
	}

	*, *:before, *:after {
		box-sizing: inherit;
	}

	html {
		box-sizing: border-box;
		font-family: system-ui, sans-serif;
	}
	
	body, p{
		margin: 0;
		padding: 0;
	}

	body {
		background: var(--bgColor);
		color: var(--textColor);
		transition: all 0.3s linear;
	}

	ul, ol {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	a {
		display: block;
		text-decoration: none;
	}

	img, video {
		width: 100%;
		display: block;
	}
</style>
