---
const { type } = Astro.props;
---

<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class={`${type === 'form' && 'icon_form'} icon`}>
  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
  <path d="M5 12l14 0" />
  <path d="M13 18l6 -6" />
  <path d="M13 6l6 6" />
</svg>

<style>
  .icon {
    width: 60px;
    height: 60px;
  } 

  .icon_form {
    width: 40px;
    height: 40px;
    position: absolute;
    right: 0;
  }

  @media (max-width: 720px) {
    .icon {
      width: 50px;
      height: 40px;
    }

    .icon_form {
      width: 30px;
      height: 30px;
    }
  }
</style>